{
  "info": {
    "_postman_id": "matrix-rotation-api",
    "name": "Matrix Rotation API",
    "description": "Collection for testing Matrix Rotation and Statistics APIs with JWT Authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "nodeUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/login",
              "host": ["{{baseUrl}}"],
              "path": ["login"]
            },
            "description": "Obtener token de autenticaci√≥n"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"token\", jsonData.token);",
                  "pm.test(\"Token recibido\", function() {",
                  "    pm.expect(jsonData.token).to.exist;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Health Checks",
      "item": [
        {
          "name": "Go API Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Node.js API Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{nodeUrl}}/health",
              "host": ["{{nodeUrl}}"],
              "path": ["health"]
            }
          }
        }
      ]
    },
    {
      "name": "Matrix Rotation",
      "item": [
        {
          "name": "Rotate Matrix (Requires Auth)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"data\": [\n        [1, 2, 3],\n        [4, 5, 6],\n        [7, 8, 9]\n    ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rotate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rotate"]
            },
            "description": "Rotate a matrix 90 degrees clockwise (requires authentication)"
          }
        }
      ]
    },
    {
      "name": "Statistics",
      "item": [
        {
          "name": "Calculate Statistics (Requires Auth)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"data\": [\n        [7, 4, 1],\n        [8, 5, 2],\n        [9, 6, 3]\n    ]\n}"
            },
            "url": {
              "raw": "{{nodeUrl}}/api/statistics",
              "host": ["{{nodeUrl}}"],
              "path": ["api", "statistics"]
            },
            "description": "Calculate statistics for a matrix (requires authentication)"
          }
        }
      ]
    },
    {
      "name": "Error Cases",
      "item": [
        {
          "name": "Unauthorized Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"data\": [\n        [1, 2, 3],\n        [4, 5, 6],\n        [7, 8, 9]\n    ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rotate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rotate"]
            },
            "description": "This request should fail with 401 Unauthorized"
          }
        }
      ]
    }
  ]
}
